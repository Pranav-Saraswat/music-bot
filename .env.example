# ======================
# Telegram Configuration
# ======================
API_ID=1234567                            # Your Telegram API ID from my.telegram.org
API_HASH="your_telegram_api_hash_here"    # Your Telegram API hash
SESSION_NAME="your_session_string_here"   # Pyrogram session string

# ==================
# Database Settings
# ==================
DATABASE_URL="mongodb://localhost:27017"  # MongoDB connection string
DATABASE_NAME="musicbot"                  # Database name
# Alternative MongoDB Atlas connection:
# DATABASE_URL="mongodb+srv://user:password@cluster.mongodb.net/dbname?retryWrites=true&w=majority"

# ===================
# YouTube Integration
# ===================
YOUTUBE_API_KEY="your_youtube_api_key"    # Google Cloud API key
YOUTUBE_COOKIES_FILE="cookies.txt"        # Path to YouTube cookies file
MAX_YT_DOWNLOADS=3                        # Max concurrent YouTube downloads
YT_DOWNLOAD_TIMEOUT=300                   # Timeout in seconds

# ===================
# Spotify Integration
# ===================
SPOTIFY_CLIENT_ID="your_spotify_client_id"
SPOTIFY_CLIENT_SECRET="your_spotify_client_secret"
SPOTIFY_REDIRECT_URI="http://localhost:8888/callback"  # For auth flow

# ====================
# IP Rotation Settings
# ====================
IP_ROTATION_ENABLED=false                 # Enable/disable IP rotation
PROXY_FILE="proxies.txt"                  # Path to proxy list file
PROXY_ROTATION_INTERVAL=300               # Rotation interval in seconds
MAX_PROXY_FAILURES=3                      # Max failures before proxy is disabled

# ================
# Bot Behavior
# ================
MAX_QUEUE_LENGTH=100                      # Max items in queue
MAX_PLAYLIST_SIZE=50                      # Max tracks per playlist
DEFAULT_VOLUME=80                         # Default volume (0-200)
MAX_DURATION=7200                         # Max track duration in seconds (2 hours)
AUTO_LEAVE_DELAY=300                      # Seconds before leaving empty voice chat
TEMP_FILE_CLEANUP=3600                    # Seconds before cleaning temp files

# ================
# User Management
# ================
ADMINS=123456789,987654321                # Comma-separated list of admin user IDs
BANNED_USERS=                             # Comma-separated banned user IDs
MAX_USER_QUEUE=10                         # Max queue items per user
USER_COOLDOWN=5                           # Command cooldown in seconds

# ================
# Logging
# ================
LOG_LEVEL="INFO"                          # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE="bot.log"                        # Path to log file
SENTRY_DSN=""                             # Sentry error tracking DSN

# ===================
# Advanced Settings
# ===================
FFMPEG_PATH="ffmpeg"                      # Custom path to ffmpeg binary
MAX_RETRIES=3                             # Max download/request retries
STREAM_BUFFER_SIZE=524288                 # 512KB buffer size for streams
AUDIO_BITRATE=128                         # Audio bitrate in kbps
TRANSCODE_FORMAT="mp3"                    # Default transcode format

# ===================
# Feature Flags
# ===================
ENABLE_SPOTIFY=true                       # Enable/disable Spotify integration
ENABLE_YOUTUBE=true                       # Enable/disable YouTube integration
ENABLE_LOCAL_FILES=false                  # Enable local file playback
ENABLE_LIVE_STREAMS=true                  # Enable YouTube live streams
ENABLE_VOTING_SYSTEM=true                 # Enable vote-to-skip feature

